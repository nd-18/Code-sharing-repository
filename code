import pandas as pd

# Define the file paths
xlsb_file_path = r'C:\Users\Nahal.Darvia\Desktop\NGI FILES\OutstandingClaimRpt Motor.xlsb'
xlsx_file_path = r'C:\Users\Nahal.Darvia\Desktop\NGI FILES\OutstandingClaimRpt Motor.xlsx'

# Read the .xlsb file using the pyxlsb engine
df = pd.read_excel(xlsb_file_path, engine='pyxlsb')

# Write the DataFrame to an .xlsx file using the openpyxl engine
df.to_excel(xlsx_file_path, index=False, engine='openpyxl')

print(f"File converted and saved to {xlsx_file_path}")
